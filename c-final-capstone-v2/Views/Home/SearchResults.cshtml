@model IEnumerable<c_final_capstone_v2.Models.Book>

@{
    ViewBag.Title = "Search Results";
}

<h2 class="title">Search Results</h2>

    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShelfNumber)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShelfNumber)
                </td>
                <td>
                    @Html.ActionLink("Add to reading list", "AddToReadingList", "User", new { bookId = item.BookId }, null)
                </td>
            </tr>
        }

    </table>
