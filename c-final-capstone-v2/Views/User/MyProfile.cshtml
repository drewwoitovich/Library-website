@using c_final_capstone_v2.Models
@model List<List<Book>>
@{
    List<Book> read = Model[0];
    List<Book> notRead = Model[1];
}
<div>
    <h3>Books to Read</h3>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Genre
            </th>
            <th>
                Shelf Number
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in notRead)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShelfNumber)
                </td>
                <td>
                    @Html.ActionLink("Mark as Read", "MarkAsRead", "User", new { bookId = item.BookId }, new { @class = "btn btn-primary btn-xs", @type = "button" })
                </td>
            </tr>
        }
    </table>
</div>
<div>
    <h3>Read Books</h3>
    <table class="table table-striped table-hover">

        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Genre
            </th>
            <th>
                Shelf Number
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in read)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShelfNumber)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteFromReadingList", "User", new { bookId = item.BookId }, new { @class = "btn btn-danger btn-xs", @type = "button" })
                </td>
            </tr>
        }
    </table>
</div>
